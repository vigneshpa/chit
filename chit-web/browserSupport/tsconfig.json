{
    "compilerOptions": {
        "outDir": "./dist",
        "strict": false,
        "target": "ES2019",
        "rootDir": "src",
        "module": "ES6",
        "lib": [
            "ES2019",
            "ES2020.bigint",
            "ES2020.string",
            "ES2020.symbol.wellknown",
            "ES2020.Promise",
            "ES6",
            "DOM"
        ],
        "removeComments": true,
        "inlineSourceMap": false,
        "moduleResolution": "node",
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*",
    ]
}