{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": false,
        "target": "ES2020",
        "module": "ES6",
        "lib": [
            "ES2019",
            "ES2020.bigint",
            "ES2020.string",
            "ES2020.symbol.wellknown",
            "ES2020.Promise",
            "ES6"
        ],
        "removeComments": false,
        "allowSyntheticDefaultImports": false,
        "inlineSourceMap": true,
        "typeRoots" : ["./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules/**/*",
        "src/public/**/*"
    ]
}