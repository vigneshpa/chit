{
    "compilerOptions": {
        "outDir": "./dist",
        "strict": false,
        "target": "ES2019",
        "module": "CommonJS",
        "rootDir": "src",
        "lib": [
            "ES2020",
            "ES2020.bigint",
            "ES2020.string",
            "ES2020.symbol.wellknown",
            "ES2020.Promise",
            "ES6"
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "inlineSourceMap": false,
        "moduleResolution": "Node",
        "typeRoots" : ["./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules/**/*",
        "src/public/**/*"
    ]
}