{
    "compilerOptions": {
        "sourceMap": false,
        "target": "ES2019",
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "declaration": false,
        "removeComments": true,
        "inlineSourceMap": false,
        "esModuleInterop": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/public/**/*"
    ]
}