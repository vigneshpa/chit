{
  "name": "chit-server",
  "version": "0.1.0",
  "description": "Server module for chit app",
  "main": "./dist/server.js",
  "scripts": {
    "build": "ts-node build.ts",
    "start": "cd ./dist && node .",
    "serve": "cp ./src/.env ./dist/.env && (cd ../frontend && yarn watch) & tsc --watch & (cd ./dist && nodemon server.js --ignore 'public/**/*')",
    "upcr": "cd ../core && yarn build && cd ../server && yarn upgrade core"
  },
  "keywords": [
    "chit",
    "chitapp",
    "app"
  ],
  "author": "Vignesh Paranthaman <vignesh-p@outlook.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "core": "../core",
    "debug": "^4.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "memorystore": "^1.6.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemon": "^2.0.12",
    "pg": "^8.6.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.11",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^15.6.1",
    "@types/pug": "^2.0.4",
    "chalk": "^4.1.1",
    "express-pug-static": "^1.1.0",
    "fs-extra": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
