{
  "name": "chit",
  "version": "0.1.0",
  "description": "Chit management program",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "cp ./dev.env ./app/.env && tsc -w",
    "build": "ts-node build.ts",
    "pack": "npm run build && electron-builder --dir --publish never",
    "dist": "npm run build && electron-builder --publish never",
    "deploy": "npm run build && electron-builder build --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigneshpa/chit.git"
  },
  "keywords": [
    "chit",
    "electron"
  ],
  "author": "vigneshpa",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/vigneshpa/chit/issues"
  },
  "homepage": "https://github.com/vigneshpa/chit#readme",
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@types/sqlite3": "^3.1.6",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "chit-common": "file:../chit-common",
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.5",
    "sqlite3": "^5.0.0"
  },
  "build": {
    "appId": "com.electron.chit",
    "mac": {
      "category": "com.electron.chit"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "msi": {
      "oneClick": false
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/**/*",
      "prod.env",
      ".env"
    ],
    "npmRebuild": true
  }
}
