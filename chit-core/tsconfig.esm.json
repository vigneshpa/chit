{
  "compilerOptions": {
    "outDir": "lib/esm",
    "strict": true,
    "target": "ES2019",
    "module": "ES6",
    "lib": [
      "ESNext",
      "ES2020",
      "ES2019",
      "ES6"
    ],
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "Node",
    "removeComments": false,
    "inlineSourceMap": false,
    "declaration": true,
    "declarationDir": "lib/esm",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}