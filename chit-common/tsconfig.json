{
  "compilerOptions": {
    "outDir": "lib",
    //"outFile":"lib/chitCommon.js",
    "strict": false,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "ES2020.bigint",
      "ES2020.string",
      "ES2020.symbol.wellknown",
      "ES2020.Promise",
      "ES2019",
      "ES6",
      "ES5"
    ],
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "lib",
    "removeComments": false,
    "allowSyntheticDefaultImports": false,
    "inlineSourceMap": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}