{
  "compilerOptions": {
    "outDir": "lib",
    //"outFile":"lib/chitCommon.js",
    "strict": false,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "ES2019",
      "ES2020.bigint",
      "ES2020.string",
      "ES2020.symbol.wellknown",
      "ES2020.Promise",
      "ES6"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "inlineSourceMap": false,
    "declaration": true,
    "declarationDir": "lib",
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}