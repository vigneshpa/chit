{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ESNext.Array"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}