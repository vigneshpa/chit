{
  "name": "chit",
  "version": "0.1.1",
  "description": "Chit Fund management program",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "cp ./dev.env ./app/.env && tsc -w",
    "dev": "trap \"exit\" INT TERM ERR;trap \"kill 0\" EXIT;(cp ./dev.env ./app/.env && tsc -w) & npx electron . & wait",
    "build": "ts-node build.ts",
    "dist": "electron-builder --dir --publish never",
    "bundle": "electron-builder --publish never",
    "deploy": "electron-builder build --win --publish always",
    "postinstall": "install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigneshpa/chit.git"
  },
  "keywords": [
    "chit",
    "electron"
  ],
  "author": "vignesh paranthaman<vignesh-p@outlook.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/vigneshpa/chit/issues"
  },
  "homepage": "https://github.com/vigneshpa/chit#readme",
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "chitcore": "file:../chit-core",
    "dotenv": "^8.2.0",
    "electron-updater": "^4.3.5",
    "sqlite3": "^5.0.1"
  },
  "build": {
    "appId": "com.electron.chit",
    "mac": {
      "category": "com.electron.chit"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/**/*"
    ]
  }
}
